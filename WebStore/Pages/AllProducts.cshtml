@page
@model WebStore.AllProductsModel
@{
    ViewData["Title"] = "AllProducts";
}

<h1>AllProducts</h1>

<div class="item">
    <div class="buttons">
        <span class="delete-btn"></span>
        <span class="like-btn"></span>
    </div>

    <div class="image">
        <img src="~/images/basicMonitor.jpg" alt="" />
    </div>

    <div class="description">
        <span>Basic Monitor</span>
        <span>Suited for light gaming and office use.</span>
        <span>White</span>
    </div>

    <div class="quantity">
        <button class="plus-btn" type="button" name="button">
            <img src="plus.svg" alt="" />
        </button>
        <input type="text" name="name" value="1">
        <button class="minus-btn" type="button" name="button">
            <img src="minus.svg" alt="" />
        </button>
    </div>

    <div class="total-price">$50</div>
</div>

